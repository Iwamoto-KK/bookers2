<p><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'info', user: @user %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |u| %>
            <tr>
              <td>
                <% if u.profile_image.attached? %>
                  <%= link_to user_path(u) do %>
                    <%= image_tag u.profile_image %>
                  <% end %>
                <% else %>
                  <%= link_to user_path(u) do %>
                    <%= image_tag 'no_image.jpg' %>
                  <% end %>
                <% end %>
              </td>
              <td>
                <%= u.name %>
              </td>
              <td>
                <%= link_to "Show" , user_path(u.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  