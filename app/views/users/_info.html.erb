<h2>User Info</h2>
<% if current_user.profile_image.attached? %>
<%= image_tag current_user.profile_image %>
<% else %>
<%= image_tag 'no_image.jpg' %>
<% end %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <% if user.introduction.present? %>
        <th><%= user.introduction %></th>
      <% else %>
        <th></th>
      <% end %>
    </tr>         
  </tbody>
</table>

<div class="row">
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_141993" do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>

<h2 class="mt-3">New book</h2>

<div class="from-group">
<%= form_with model: Book.new do |f| %>
  <label for="book_title">Title</label>
  <%= f.text_field :title, class: "form-control book_title" %>
</div>

<div class="from-group">
  <label for="book_Opinion">Opinion</label>
  <%= f.text_area :body, class: "form-control book_Opinion" %>
</div>

<div class="from-group">
    <%= f.submit 'Create Book', class: "btn btn-sm btn-success" %>
<% end %>
</div>